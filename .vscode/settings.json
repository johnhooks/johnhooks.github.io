{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [100],
  "editor.formatOnSave": true,
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/tsconfig.tsbuildinfo": true
  },
  "files.associations": {
    "*.svx": "markdown"
  },
  "search.exclude": {
    "build/**": true,
    ".svelte-kit./**": true,
    "node_modules/**": true,
    "package-lock.json": true
  },
  "editor.quickSuggestionsDelay": 1000,
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.autoClosingTags": false,
  "html.autoClosingTags": true,
  "typescript.suggest.completeJSDocs": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "eslint.workingDirectories": [ "./apps/website", "./" ],
  "cSpell.words": [
    "compile",
    "csrf",
    "dev",
    "esbuild",
    "hastscript",
    "heroicon",
    "mdsvex",
    "mimetype",
    "mixins",
    "nocache",
    "postgres",
    "precompile",
    "precompiled",
    "precompress",
    "prepend",
    "prerender",
    "rehype",
    "resave",
    "shiki",
    "stylesheet",
    "sveltejs",
    "tailwindcss",
    "templating",
    "vite",
    "webp"
  ],
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/.svelte-kit/**",
    "**/build/**",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    "./vscode/**"
  ]
}
